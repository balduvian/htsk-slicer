{
	"name": "HTSK Slicer",
	"description": "An interface for cutting up HTSK lessons into Anki cards",
	"version": "0.0.1",
	"manifest_version": 3,
	"content_scripts": [
		{
			"matches": ["https://www.howtostudykorean.com/*"],
			"js": ["content.js"]
		}
	],
	"permissions": ["storage", "activeTab", "downloads"],
	"action": {
		"default_icon": {
			"16": "icon16.png",
			"32": "icon32.png",
			"48": "icon48.png",
			"128": "icon128.png"
		}
	},
	"icons": {
		"16": "icon16.png",
		"32": "icon32.png",
		"48": "icon48.png",
		"128": "icon128.png"
	}
}
